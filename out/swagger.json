{
  "openapi": "3.0.0",
  "info": { "title": "Rhymix API", "version": "1.0.0" },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "라이믹스 계정으로 로그인",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "string", "example": "test123" },
                  "password": { "type": "string", "example": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "성공" },
          "401": { "description": "인증 실패" }
        }
      }
    }
  }
}